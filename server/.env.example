# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL - used in production via Render)
DATABASE_URL=postgresql://user:password@host:5432/cayden_bank

# JWT (REQUIRED - no defaults, server will not start without these)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (REQUIRED for linked bank account data protection)
ENCRYPTION_KEY=your-32-char-encryption-key-here!

# CORS (comma-separated origins for production)
CORS_ORIGINS=https://your-frontend-domain.com
